<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="disable_right_click" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Disable Right Click</label>
                <field id="mod_status" translate="label comment" type="select" sortOrder="10" showInDefault="1" canRestore="1">
                    <label>Enable Module</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Select Yes to Disable the Right Click from the frontend</comment>
                </field>
                <field id="image_status" translate="label comment" type="select" sortOrder="11" showInDefault="1" canRestore="1">
                    <label>Enable Module</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Select Yes to Disable the Right Click from the frontend Image Only</comment>
                </field>
            </group>
        </section>
    </system>
</config>